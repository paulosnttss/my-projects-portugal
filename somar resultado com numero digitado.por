programa
{
	
	funcao inicio()
	{
		inteiro i, numero,soma
		soma = 0
		para (i = 1; i < 101; i++){
	
			
		escreva(" Informe o ", i , " º número: ")
		leia(numero)
           soma = soma + numero
           
           escreva(" \nA soma dos numeros é: ", soma, "\n")}
	}
}
